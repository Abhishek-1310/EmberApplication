<div class="recipe-view" {{on "click" this.toggleExpand}}>
    <h3 style="color: #338aca;">
        
        <span {{on 'click' this.toggleFavorite}}>
            {{#if this.isFavorite}}
                <span class="favorite star">★</span>
            {{else}}
                <span class="star">☆</span>
            {{/if}}
        </span>
        
        {{@title}}

        <span {{on 'click' this.buttonTog}}>
            {{!-- <button class="btn1" {{action "deleteRecipe" this.model.id}} >Delete</button> --}}
            <button class="btn1" {{on 'click' (fn this.deleteRecipe @model)}} >Delete</button>
        </span>
        
    </h3>

    {{#if this.isExpanded}}
    <p style="background-color: white; padding: 5px;
    border-radius: 10px;" class="recipe-details">{{@description}}</p>
    <LinkTo style="background-color: black; padding:10px; border-radius: 8px;
    color: white;
    text-decoration: none" @route="recipes/details" @model="{{@id}}">Details</LinkTo>
    {{/if}}

</div>